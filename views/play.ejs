<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>–ò–≥—Ä–æ–≤–∞—è –°—Ç—Ä–∞–Ω–∏—Ü–∞</title>
    <!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —à—Ä–∏—Ñ—Ç–æ–≤ -->
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ —à—Ä–∏—Ñ—Ç–∞ Roboto -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      /* –°–±—Ä–æ—Å —Å—Ç–∏–ª–µ–π */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      /* –û—Å–Ω–æ–≤–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã */
      body {
        margin: 0;
        padding: 0;
        font-family: "Roboto", sans-serif;
        text-align: center;
        overflow: hidden; /* –ó–∞–ø—Ä–µ—Ç–∏—Ç—å –ø—Ä–æ–∫—Ä—É—Ç–∫—É */
        background: #1a1a2e; /* –û—Å–Ω–æ–≤–Ω–æ–π —Ü–≤–µ—Ç —Ñ–æ–Ω–∞ */
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      /* –§–æ–Ω —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π */
      .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
          circle,
          rgba(255, 255, 255, 0.1),
          rgba(0, 0, 0, 0.8)
        );
        animation: move 10s infinite linear;
        z-index: -1;
      }

      @keyframes move {
        0% {
          background-position: 0% 0%;
        }
        100% {
          background-position: 100% 100%;
        }
      }

      /* –ò–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ –≤–µ—Ä—Ö–Ω–µ–º –ª–µ–≤–æ–º —É–≥–ª—É */
      .username {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 16px;
        color: yellow;
        z-index: 2;
        text-align: left;
      }

      /* –û—Ç–¥–µ–ª—å–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è –∏–º–µ–Ω–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è */
      .user-name {
        font-weight: bold;
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è –Ω–∞–¥–ø–∏—Å–µ–π */
      .caption-text {
        color: white;
        font-size: 20px;
        margin-bottom: 10px;
        font-weight: bold;
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è –±–∞–ª–∞–Ω—Å–∞ */
      .user-balance {
        font-size: 24px;
        font-family: "Press Start 2P", cursive;
        color: #7cfc00;
        font-weight: bold;
        margin: 10px auto;
        text-align: center;
        position: relative;
      }

      /* –ò–∫–æ–Ω–∫–∞ –∫–æ—à–µ–ª—å–∫–∞ –≤ –≤–µ—Ä—Ö–Ω–µ–º –ø—Ä–∞–≤–æ–º —É–≥–ª—É */
      .wallet-icon {
        position: absolute;
        top: 15px;
        right: 20px;
        width: 30px;
        height: auto;
        z-index: 2;
      }

      /* –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä */
      .container {
        position: relative;
        z-index: 2;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px 0;
      }

      /* –ë–ª–æ–∫ –¥–ª—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è, —Ç–∞–π–º–µ—Ä–∞ –∏ –∫–Ω–æ–ø–∫–∏ */
      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      /* –°—Ç–∏–ª—å –¥–ª—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å —ç—Ñ—Ñ–µ–∫—Ç–æ–º –ø—É–ª—å—Å–∞—Ü–∏–∏ –∏ –ø–ª–∞–≤–Ω–æ–≥–æ –ø–æ—è–≤–ª–µ–Ω–∏—è */
      .coins-image {
        width: 60vw;
        height: auto;
        animation: pulseEffect 2s infinite, fadeIn 1s forwards;
        position: relative;
        margin-bottom: 20px;
        opacity: 0; /* –ù–∞—á–∞–ª—å–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –ø—Ä–æ–∑—Ä–∞—á–Ω–æ—Å—Ç–∏ */
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      @keyframes pulseEffect {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.05);
        }
        100% {
          transform: scale(1);
        }
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è —ç–º–æ–¥–∑–∏ */
      .emoji {
        position: absolute;
        font-size: 24px;
        opacity: 0;
        animation: flyOut 2s forwards;
        pointer-events: none;
      }

      @keyframes flyOut {
        0% {
          transform: translate(0, 0) scale(1);
          opacity: 1;
        }
        100% {
          transform: translate(var(--dx), var(--dy)) scale(0.5);
          opacity: 0;
        }
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è —Ç–µ–∫—Å—Ç–∞ –ø–æ–¥ –±–∞–ª–∞–Ω—Å–æ–º */
      .timer-text {
        color: red;
        font-size: 14px;
        margin-top: 10px;
        text-align: center;
        width: 80%;
        font-weight: bold;
      }

      /* –°—Ç–∏–ª–∏ –∫–Ω–æ–ø–∫–∏ */
      .button {
        background: linear-gradient(to right, #ff4081, #00b0ff);
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        font-size: 20px;
        margin-top: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        text-decoration: none;
        display: inline-block;
        outline: none;
        user-select: none;
        transition: transform 0.2s;
      }

      /* –ê–Ω–∏–º–∞—Ü–∏—è –Ω–∞–∂–∞—Ç–∏—è –∫–Ω–æ–ø–∫–∏ */
      .button.clicked {
        animation: buttonClick 0.2s;
      }

      @keyframes buttonClick {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(0.9);
        }
        100% {
          transform: scale(1);
        }
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è –∫–Ω–æ–ø–∫–∏ –º–µ–Ω—é */
      .menu-button {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 40px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        z-index: 3;
      }

      .menu-line {
        width: 30px;
        height: 4px;
        background-color: white;
        border-radius: 2px;
      }

      /* –°—Ç–∏–ª–∏ –¥–ª—è —Ç–∞–π–º–µ—Ä–∞ */
      .timer {
        width: 60%;
        color: yellow; /* –ñ—ë–ª—Ç—ã–π —Ü–≤–µ—Ç */
        font-size: 24px;
        margin: 10px auto;
        text-align: center;
        position: relative;
        font-family: "Press Start 2P", cursive; /* –ò–∑–º–µ–Ω–µ–Ω–æ –Ω–∞ –ø–∏–∫—Å–µ–ª—å–Ω—ã–π —à—Ä–∏—Ñ—Ç */
      }
    </style>
  </head>
  <body>
    <!-- –§–æ–Ω —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π -->
    <div class="background"></div>

    <!-- –ò–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ –≤–µ—Ä—Ö–Ω–µ–º –ª–µ–≤–æ–º —É–≥–ª—É -->
    <div class="username">
      <div class="user-name"><%= username %></div>
    </div>

    <!-- –ò–∫–æ–Ω–∫–∞ –∫–æ—à–µ–ª—å–∫–∞ –≤ –≤–µ—Ä—Ö–Ω–µ–º –ø—Ä–∞–≤–æ–º —É–≥–ª—É -->
    <img src="wallet.png" alt="Wallet" class="wallet-icon" />

    <div class="container">
      <!-- –ë–ª–æ–∫ —Å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ–º, —Ç–∞–π–º–µ—Ä–æ–º –∏ –∫–Ω–æ–ø–∫–æ–π -->
      <div class="content">
        <!-- –ù–∞–¥–ø–∏—Å—å –Ω–∞–¥ –±–∞–ª–∞–Ω—Å–æ–º -->
        <div class="caption-text">InfluStar coins:</div>

        <!-- –ë–∞–ª–∞–Ω—Å -->
        <div class="user-balance" id="balance"><%= cointrust %></div>

        <!-- –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –º–æ–Ω–µ—Ç -->
        <img src="coins.png" alt="Coins" class="coins-image" id="coinsImage" />

        <!-- –ù–∞–¥–ø–∏—Å—å SPEED: x1 –Ω–∞–¥ —Ç–∞–π–º–µ—Ä–æ–º -->
        <div class="caption-text">–°–ö–û–†–û–°–¢–¨ –§–ê–†–ú–ò–ù–ì–ê: x1</div>

        <!-- –¢–∞–π–º–µ—Ä -->
        <div class="timer" id="timer">0.0001</div>

        <!-- –¢–µ–∫—Å—Ç –ø–æ–¥ –±–∞–ª–∞–Ω—Å–æ–º -->
        <div class="timer-text">
          –í—ã–ø–æ–ª–Ω–∏ –∑–∞–¥–∞–Ω–∏–µ –∏ –∑–∞–ø—É—Å—Ç–∏ —Ñ–∞—Ä–º–∏–Ω–≥ –º–æ–Ω–µ—Ç!
        </div>

        <!-- –ö–Ω–æ–ø–∫–∞ "–í–´–ü–û–õ–ù–ò–¢–¨" –±–ª–∏–∂–µ –∫ —Ç–µ–∫—Å—Ç—É -->
        <a href="#" class="button" id="collectButton">–í–´–ü–û–õ–ù–ò–¢–¨</a>
      </div>
    </div>

    <!-- –ö–Ω–æ–ø–∫–∞ –º–µ–Ω—é –≤–Ω–∏–∑—É –ø–æ —Ü–µ–Ω—Ç—Ä—É —ç–∫—Ä–∞–Ω–∞ -->
    <div class="menu-button">
      <div class="menu-line"></div>
      <div class="menu-line"></div>
      <div class="menu-line"></div>
    </div>

    <script>
      // –≠–º–æ–¥–∑–∏ –¥–ª—è –≤—ã–ª–µ—Ç–∞
      const emojis = ["‚ù§Ô∏è", "üëç", "üí¨"];

      // –§—É–Ω–∫—Ü–∏—è –∑–∞–ø—É—Å–∫–∞ —ç–º–æ–¥–∑–∏
      function launchEmojis() {
        const image = document.getElementById("coinsImage");
        const rect = image.getBoundingClientRect();
        const imageCenterX = rect.left + rect.width / 2;
        const imageCenterY = rect.top + rect.height / 2;

        const viewportWidth = window.innerWidth;
        const viewportHeight = window.innerHeight;

        emojis.forEach((emoji) => {
          const emojiEl = document.createElement("div");
          emojiEl.classList.add("emoji");
          emojiEl.textContent = emoji;

          // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –Ω–∞—á–∞–ª—å–Ω—É—é –ø–æ–∑–∏—Ü–∏—é –≤ —Ü–µ–Ω—Ç—Ä–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
          emojiEl.style.left = imageCenterX + "px";
          emojiEl.style.top = imageCenterY + "px";

          // –í—ã—á–∏—Å–ª—è–µ–º –º–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–µ —Å–º–µ—â–µ–Ω–∏—è, —á—Ç–æ–±—ã —ç–º–æ–¥–∑–∏ –Ω–µ –≤—ã—Ö–æ–¥–∏–ª–∏ –∑–∞ –≥—Ä–∞–Ω–∏—Ü—ã —ç–∫—Ä–∞–Ω–∞
          const maxOffsetX = Math.min(
            imageCenterX - 20,
            viewportWidth - imageCenterX - 20
          );
          const maxOffsetY = imageCenterY - 20; // –≠–º–æ–¥–∑–∏ –±—É–¥—É—Ç –ª–µ—Ç–µ—Ç—å —Ç–æ–ª—å–∫–æ –≤–≤–µ—Ä—Ö

          // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω–æ–µ —Å–º–µ—â–µ–Ω–∏–µ
          const dx = (Math.random() - 0.5) * 2 * maxOffsetX;
          const dy = -Math.random() * maxOffsetY;

          // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º CSS-–ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
          emojiEl.style.setProperty("--dx", dx + "px");
          emojiEl.style.setProperty("--dy", dy + "px");

          document.body.appendChild(emojiEl);

          // –£–¥–∞–ª—è–µ–º —ç–º–æ–¥–∑–∏ –ø–æ—Å–ª–µ –æ–∫–æ–Ω—á–∞–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
          emojiEl.addEventListener("animationend", () => {
            emojiEl.remove();
          });
        });
      }

      // –ó–∞–ø—É—Å–∫–∞–µ–º —ç–º–æ–¥–∑–∏ –∫–∞–∂–¥—ã–µ 2 —Å–µ–∫—É–Ω–¥—ã
      setInterval(launchEmojis, 2000);

      // –¢–∞–π–º–µ—Ä
      let timerValue = 0.0000;

      function updateTimer() {
        // –ü—Ä–∏–±–∞–≤–ª—è–µ–º 0.0001 –∫ —Ç–µ–∫—É—â–µ–º—É –∑–Ω–∞—á–µ–Ω–∏—é
        timerValue += 0.0001;
        // –û–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–Ω–∞–∫–æ–≤ –ø–æ—Å–ª–µ –∑–∞–ø—è—Ç–æ–π
        timerValue = parseFloat(timerValue.toFixed(4));
        // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Ç–∞–π–º–µ—Ä–∞
        document.getElementById("timer").textContent = timerValue.toFixed(4);
      }

      // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä, –æ–±–Ω–æ–≤–ª—è—è –∫–∞–∂–¥—ã–µ 500 –º–∏–ª–ª–∏—Å–µ–∫—É–Ω–¥
      let timerInterval = setInterval(updateTimer, 500);

      // –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏—è –∫–Ω–æ–ø–∫–∏ "–í–´–ü–û–õ–ù–ò–¢–¨"
      document
        .getElementById("collectButton")
        .addEventListener("click", function (event) {
          event.preventDefault(); // –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–∞–µ–º –ø–µ—Ä–µ—Ö–æ–¥ –ø–æ —Å—Å—ã–ª–∫–µ

          // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏ –∫–Ω–æ–ø–∫–∏
          const button = this;
          button.classList.add("clicked");

          // –£–¥–∞–ª—è–µ–º –∫–ª–∞—Å—Å –ø–æ—Å–ª–µ –æ–∫–æ–Ω—á–∞–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
          button.addEventListener(
            "animationend",
            function () {
              button.classList.remove("clicked");
            },
            { once: true }
          );

          // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–∏–π –±–∞–ª–∞–Ω—Å –∏–∑ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
          const balanceElement = document.getElementById("balance");
          let balanceText = balanceElement.textContent.trim();
          let currentBalance = parseFloat(balanceText) || 0;

          // –î–æ–±–∞–≤–ª—è–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ —Ç–∞–π–º–µ—Ä–∞ –∫ –±–∞–ª–∞–Ω—Å—É
          currentBalance += timerValue;
          currentBalance = parseFloat(currentBalance.toFixed(4));

          // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –±–∞–ª–∞–Ω—Å–∞
          balanceElement.textContent = currentBalance.toFixed(4);

          // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Ç–∞–π–º–µ—Ä
          timerValue = 0.0001;
          document.getElementById("timer").textContent = timerValue.toFixed(4);
        });
    </script>
  </body>
</html>
