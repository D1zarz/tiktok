<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –≤–µ—Ä–∏—Ñ–∏–∫–∞—Ü–∏–∏</title>
    <!-- –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –ø–∏–∫—Å–µ–ª—å–Ω–æ–≥–æ —à—Ä–∏—Ñ—Ç–∞ -->
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <style>
      /* –°–±—Ä–æ—Å —Å—Ç–∏–ª–µ–π –∏ –±–∞–∑–æ–≤—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Roboto", sans-serif;
        background: #1a1a2e;
        color: #ffffff;
        overflow: hidden;
        position: relative;
        text-align: center;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
          circle,
          rgba(255, 255, 255, 0.1),
          rgba(0, 0, 0, 0.8)
        );
        z-index: -1;
      }

      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 400px;
        padding: 20px;
      }

      /* –°—Ç–∏–ª—å –¥–ª—è –Ω–∏–∫–Ω–µ–π–º–∞ */
      .username {
        font-family: "Press Start 2P", cursive;
        font-size: 24px;
        color: #ffffff;
        margin-bottom: 20px;
        opacity: 0;
        animation: fadeIn 1s forwards;
        animation-delay: 1s;
      }

      .avatar-container {
        position: relative;
        width: 150px;
        height: 150px;
        opacity: 0;
        animation: fadeIn 1s forwards 1s;
        margin-bottom: 20px;
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      .loader {
        position: absolute;
        top: 0;
        left: 0;
        width: 150px;
        height: 150px;
        border: 10px solid rgba(255, 255, 255, 0.3);
        border-top: 10px solid #ff4081;
        border-radius: 50%;
        animation: spin 1.5s linear infinite;
        z-index: 1;
      }

      .avatar {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 130px;
        height: 130px;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        z-index: 2;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      /* –ë–ª–æ–∫ —Å —ç–º–æ–¥–∂–∏ */
      .emoji-stats {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        margin-bottom: 20px;
        opacity: 0;
        animation: fadeIn 1s forwards;
        animation-delay: 2s;
      }

      .emoji-stats p {
        margin: 0 15px;
        font-size: 18px;
        color: rgba(255, 255, 255, 0.85);
      }

      .container {
        opacity: 0;
        animation: fadeIn 1s forwards;
        animation-delay: 3s;
      }

      #trustcoin-result {
        font-size: 20px;
        margin: 10px 0;
      }

      #trustcoin-result .influStar-result-number {
        font-weight: bold;
        color: #32cd32;
        font-size: 36px;
      }

      /* –û–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è –∫–Ω–æ–ø–∫–∏ */
      a {
        display: inline-block;
        padding: 15px 30px; /* –£–≤–µ–ª–∏—á–∏–ª–∏ –æ—Ç—Å—Ç—É–ø—ã */
        background: linear-gradient(to right, #ff4081, #00b0ff);
        color: #ffffff;
        border-radius: 30px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        margin-top: 20px;
        opacity: 0;
        animation: fadeIn 1s forwards;
        animation-delay: 4s;
        font-size: 20px; /* –£–≤–µ–ª–∏—á–∏–ª–∏ —Ä–∞–∑–º–µ—Ä —à—Ä–∏—Ñ—Ç–∞ */
        cursor: pointer; /* –î–æ–±–∞–≤–∏–ª–∏ —É–∫–∞–∑–∞—Ç–µ–ª—å –∫—É—Ä—Å–æ—Ä–∞ */
      }

      a:hover {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.7);
      }

      /* Canvas –¥–ª—è —ç—Ñ—Ñ–µ–∫—Ç–∞ –≤–∑—Ä—ã–≤–∞ */
      #explosionCanvas {
        position: absolute;
        top: 0;
        left: 0;
        pointer-events: none;
        z-index: 10;
      }

      /* –ú–µ–¥–∏–∞-–∑–∞–ø—Ä–æ—Å—ã –¥–ª—è –º–∞–ª–µ–Ω—å–∫–∏—Ö —ç–∫—Ä–∞–Ω–æ–≤ */
      @media (max-height: 700px) {
        .content {
          padding: 10px;
        }

        .avatar-container {
          width: 120px;
          height: 120px;
          margin-bottom: 15px;
        }

        .loader {
          width: 120px;
          height: 120px;
        }

        .avatar {
          width: 100px;
          height: 100px;
        }

        .username {
          font-size: 18px;
          margin-bottom: 15px;
        }

        .emoji-stats p {
          font-size: 16px;
        }

        #trustcoin-result {
          font-size: 18px;
        }

        #trustcoin-result .influStar-result-number {
          font-size: 28px;
        }

        /* –û–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–µ —Å—Ç–∏–ª–∏ –¥–ª—è –∫–Ω–æ–ø–∫–∏ –Ω–∞ –º–∞–ª–µ–Ω—å–∫–∏—Ö —ç–∫—Ä–∞–Ω–∞—Ö */
        a {
          padding: 12px 24px;
          font-size: 18px;
        }
      }
    </style>
  </head>
  <body>
    <div class="background"></div>

    <div class="content">
      <!-- –ù–∏–∫–Ω–µ–π–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –ø–æ —Ü–µ–Ω—Ç—Ä—É -->
      <div class="username"><%= username %></div>

      <div class="avatar-container">
        <div class="loader"></div>
        <img src="<%= avatarThumb %>" alt="Avatar" class="avatar" />
      </div>

      <div class="emoji-stats">
        <p class="followers"><strong>üë®</strong> <%= followerCount %></p>
        <p class="hearts"><strong>‚ù§Ô∏è</strong> <%= heartCount %></p>
        <p class="videos"><strong>‚ñ∂Ô∏è</strong> <%= videoCount %></p>
      </div>

      <div class="container">
        <p id="trustcoin-result">
          <strong>
            WOW! <br />
            influStar Coins
          </strong>
          <br /><span class="influStar-result-number"><%= cointrust %></span>
        </p>
        <a href="/play?username=<%= username %>&cointrust=<%= cointrust %>">
          –ù–ê–ß–ê–¢–¨
        </a>
      </div>
    </div>

    <!-- Canvas –¥–ª—è —ç—Ñ—Ñ–µ–∫—Ç–∞ –≤–∑—Ä—ã–≤–∞ -->
    <canvas id="explosionCanvas"></canvas>

    <script>
      // –ü–æ–∫–∞–∑–∞—Ç—å –∞–≤–∞—Ç–∞—Ä–∫—É –∏ –∫–æ–ª—ë—Å–∏–∫–æ –∑–∞–≥—Ä—É–∑–∫–∏ —á–µ—Ä–µ–∑ 1 —Å–µ–∫—É–Ω–¥—É
      setTimeout(() => {
        document.querySelector(".avatar-container").style.display = "block";
      }, 1000);

      // –≠—Ñ—Ñ–µ–∫—Ç –≤–∑—Ä—ã–≤–∞ –ø—Ä–∏ –ø–æ—è–≤–ª–µ–Ω–∏–∏ Trustcoin —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞
      setTimeout(() => {
        const canvas = document.getElementById("explosionCanvas");
        const ctx = canvas.getContext("2d");
        const particles = [];
        const particleCount = 100;
        const colors = ["#FF4081", "#00B0FF", "#FFFFFF", "#FFD700"];

        // –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å —Ä–∞–∑–º–µ—Ä—ã Canvas –ø–æ —Ä–∞–∑–º–µ—Ä—É –æ–∫–Ω–∞
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // –ü–æ–∑–∏—Ü–∏—è —ç–ª–µ–º–µ–Ω—Ç–∞ "WOW! influStar Coins"
        const trustcoinElement = document.getElementById("trustcoin-result");
        const rect = trustcoinElement.getBoundingClientRect();
        const originX = rect.left + rect.width / 2;
        const originY = rect.top + rect.height / 2;

        // –°–º–µ—â–µ–Ω–∏–µ –¥–ª—è –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–≥–æ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –Ω–∞ Canvas
        const canvasX = originX;
        const canvasY = originY;

        // –°–æ–∑–¥–∞–Ω–∏–µ —á–∞—Å—Ç–∏—Ü
        for (let i = 0; i < particleCount; i++) {
          particles.push({
            x: canvasX,
            y: canvasY,
            velocityX: (Math.random() - 0.5) * 10,
            velocityY: (Math.random() - 0.5) * 10,
            color: colors[Math.floor(Math.random() * colors.length)],
            size: Math.random() * 5 + 2,
            life: 100,
          });
        }

        // –ê–Ω–∏–º–∞—Ü–∏—è —á–∞—Å—Ç–∏—Ü
        function animate() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          particles.forEach((particle, index) => {
            particle.x += particle.velocityX;
            particle.y += particle.velocityY;
            particle.life--;

            ctx.fillStyle = particle.color;
            ctx.beginPath();
            ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);
            ctx.fill();

            if (particle.life <= 0) {
              particles.splice(index, 1);
            }
          });

          if (particles.length > 0) {
            requestAnimationFrame(animate);
          } else {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            // –ü–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏ —Å–∫—Ä—ã—Ç—å –∫–æ–ª–µ—Å–æ –∑–∞–≥—Ä—É–∑–∫–∏
            const loader = document.querySelector(".loader");
            if (loader) {
              loader.style.opacity = 1;
              const fadeOut = setInterval(() => {
                if (loader.style.opacity > 0) {
                  loader.style.opacity -= 0.05;
                } else {
                  clearInterval(fadeOut);
                  loader.style.display = "none";
                }
              }, 50);
            }
          }
        }

        animate();
      }, 4000); // –ó–∞–¥–µ—Ä–∂–∫–∞ –≤ 4 —Å–µ–∫—É–Ω–¥—ã –¥–ª—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏–∏ —Å –ø–æ—è–≤–ª–µ–Ω–∏–µ–º —ç–ª–µ–º–µ–Ω—Ç–∞
    </script>
  </body>
</html>
